pipeline {
    agent any
    stages {
        stage("Newman Tests") {
            steps {
                sh '''
                cd api/newman
                newman run Creativa.postman_collection.json -e ProyectoCreativa.postman_environment.json
                '''
            }
        }
    stage('RestAssured Tests') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh '''
                        cd api/rest_assured
                        mvn clean test
                        '''
                }
            }              
        }
    stage("Newman Tests") {
            steps {
                sh '''
                cd load
                jmeter -n -t examen_test_plan.jmx
                '''
            }
        }
    }
}